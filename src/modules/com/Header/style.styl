@import '~nib/lib/nib/index.styl'

/* Begin Header */
.header
    display block
    fixed top 0 left 0
    background-color #EA3344
    width 100%
    z-index 100

.wrap
    height 120px
    max-width 1920px
    margin 0 auto
    transition all .5s
  
.content
    position relative
    max-width 75%
    height 100%
    margin 0 auto
  
.js-scroll .wrap
    height 60px

.logo
    absolute top 40px left 10px
    width 130px
  
.home
    absolute top 48px right 10px
    width 36px

.header[data-state='scrolled']
    .wrap
        height 60px
    .logo
        top 15px
        width 100px
    .home
        top 20px
        width 30px

/* End Header */