@import '~nib/lib/nib/index.styl'

/* Begin Home */
.home-box
    padding-top 160px

.home-wrapper
    max-width 1430px
    padding 0 4px
    margin 0 auto

// Read more
.read-more
    height 140px
    max-width 1430px
    padding 0 4px
    margin 0 auto

.read-more
    .line
        float right
        position relative
        height 24px
        line-height 24px
        margin-top 58px
        padding 0 60px
        color #000
    .line:hover
        color #E93F5C
    .line-block
        display inline-block
    
.read-more-btn
    absolute top 0 left 0
    height 24px
    width 60px
    background url(./img/read-more2.gif) 50% 50% no-repeat
    background-size auto 100%
  
.read-more-line
    absolute top 11px right 0
    height 1px
    width 50px
    background-color #000

@media screen and (max-width: 500px)
    .home-content
        margin-top 15%

    .home-box
        padding-top 112px

    .home-slide-item .slide-content
        .home-slider-label
            font-size 14px
        
        .home-slider-title
            margin-top 6px
        
        .home-slider-desc
            margin-top 6px
            width 240px

        .home-slider-data
            top 28%

    .logo
        top 5%
        width 60%

    .sub-title-box
        visibility visible
  
/* End Home */